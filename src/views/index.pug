doctype html
html
  head
    title QR Generator
    link(rel="stylesheet", href="/styles.css")
  body
    h1 Create QR!
    main
      form(action="/", method="post")
        div(style={display:"grid"})
          label(for="url") URL
          input(type="text", id="url", name="url", required,style={"font-size":"20px"})
        button(type="submit") Generate
      if result
        img(src=result, alt="Generated qr image")    