doctype html
html
  head
    title QR Generator
    link(rel="stylesheet", href="/styles.css")
  body
    h1 Create QR!
    main
      form(action="/", method="post")
        div(style={display:"grid"})
          label(for="url") URL
          input(type="text", id="url", name="url", required)
        br
        button(type="submit") Enviar
      if result
        img(src=result, alt="Imagen en base64")    