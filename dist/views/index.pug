doctype html
html
  head
    title QR Generator
    link(rel="stylesheet", href="/styles.css")
  body
    h1 CREATE QR
    main
      form(action="/", method="post")
        div(style={display:"grid"})
          div(style={display:"flex", "align-items":"center", "flex-direction":"column"})
            label(for="url") URL
            input(type="text", id="url", name="url", required,style={"font-size":"20px"})
        button(type="submit") Generate
      if result
        img(src=result, alt="Generated qr image")    